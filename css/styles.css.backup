  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(37, 211, 102, 0.4);
  transition: var(--transition);
  text-decoration: none;
}

.sticky-whatsapp:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 20px rgba(37, 211, 102, 0.5);
}

.sticky-whatsapp svg {
  width: 30px;
  height: 30px;
}

/* FAQ Section */
.faq-section {
  max-width: 900px;
  margin: 0 auto;
  padding: 4rem 2rem;
}

.faq-container {
  margin-top: 3rem;
}

.faq-item {
  background: var(--bg-white);
  border-radius: var(--border-radius);
  margin-bottom: 1rem;
  box-shadow: var(--shadow-light);
  overflow: hidden;
}

.faq-question {
  padding: 1.5rem;
  font-weight: 600;
  color: var(--text-dark);
  cursor: pointer;
  list-style: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: var(--transition);
}

.faq-question:hover {
  background: rgba(0, 179, 155, 0.05);
}

.faq-question::after {
  content: '+';
  font-size: 1.5rem;
  color: var(--primary-color);
  transition: transform 0.3s ease;
}

.faq-item[open] .faq-question::after {
  transform: rotate(45deg);
}

.faq-answer {
  padding: 0 1.5rem 1.5rem;
  color: var(--text-light);
  line-height: 1.7;
}

/* Scroll Reveal Animations */
.scroll-reveal {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}

.scroll-reveal.visible {
  opacity: 1;
  transform: translateY(0);
}

.scroll-reveal-delay-1 {
  transition-delay: 0.1s;
}

.scroll-reveal-delay-2 {
  transition-delay: 0.2s;
}

.scroll-reveal-delay-3 {
  transition-delay: 0.3s;
}

/* Responsive */
@media (max-width: 768px) {
  .hero-content {
    grid-template-columns: 1fr;
    text-align: center;
  }
  
  .hero-text h1 {
    font-size: 2rem;
  }
  
  .hero-image {
    order: -1;
  }
  
  .hero-image img {
    max-width: 250px;
    margin: 0 auto;
    display: block;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .cta-grid-4 {
    grid-template-columns: 1fr;
    padding: 0 1rem;
    gap: 1rem;
  }
  
  .cta-box {
    padding: 1rem 1.25rem;
    gap: 1rem;
  }
  
  .sticky-whatsapp {
    bottom: 20px;
    right: 20px;
    width: 50px;
    height: 50px;
  }
}

@media (max-width: 480px) {
  .services-hero {
    padding: 3rem 1rem;
  }
  
  .hero-text h1 {
    font-size: 1.8rem;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .cta-grid-4 {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .cta-box {
    padding: 1rem 1.25rem;
    flex-direction: row;
    gap: 1rem;
  }
  
  .cta-box h3 {
    font-size: 1rem;
    margin-bottom: 0.2rem;
  }
  
  .cta-box p {
    font-size: 0.85rem;
  }
  
  .btn-cta {
    padding: 0.5rem 1rem;
    font-size: 0.85rem;
  }
}